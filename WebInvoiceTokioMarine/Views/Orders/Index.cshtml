@model IEnumerable<WebInvoiceTokioMarine.Models.Order>

@{
    ViewBag.Title = "Index";
}



    <table class="table table-hover table-striped table-bordered">
        <tr>
            <th>
               Invoice No
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalOrder)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
        <td>
            @item.CreatedDate.Day -  @item.CreatedDate.Month -  @item.CreatedDate.Year
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalOrder)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.OrderId }, new { @class = "btn btn-primary" }) 
        </td>
        <td>
            @Html.ActionLink("Print Invoice", "PrintInvoice","Basket", new { userId =item.CreatedBy, orderId = item.OrderId }, new { @class = "btn btn-danger" }) 
        </td>
    </tr>
        }

    </table>
